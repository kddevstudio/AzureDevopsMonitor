{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AzureDevOps": {
    "CollectionUri": "",
    "ProjectName": "",
    "RepositoryName": "",
    "PatToken": "" // this value should be generated by Azure DevOps and kept secret
  },
  // either http or http must be specified, these values are used when creating the subscription
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": ""
      },
      "Https": {
        "Url": ""
      }
    }
  },
  "LettuceEncrypt": {
    // Set this to automatically accept Let's Encrypt's terms of service.
    // If you don't set this in config, you will need to press "y" whenever the application starts
    "AcceptTermsOfService": true,

    // You must at least one domain name
    "DomainNames": [ "example.com" ],

    // You must specify an email address to register with letsencrypt.org
    "EmailAddress": "me@example.com",

    "PersistToDisk": false,

    // provide a password and a path here if persisting the certificate to disk 
    "PersistPassword": "",
    "PersistDirectory": "" 
  },
  // these values are used to generate and validate a token specified for and posted with each notification
  "JWT": {
    "Issuer": "",
    "Audience": "",
    "serverSecret": "" // this value should be kept secret
  }
}
